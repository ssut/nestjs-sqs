{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["vitest/globals"]
  },
  "include": ["lib", "e2e"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
